#!/bin/bash

cat "$1" \
| sed \
	-e '/^#.*/d' \
	-e '/^\s*$/d' \
	-e '1,$s/=#/":"#/g' \
	-e '1,$s/$/",/g' \
	-e '1,$s/^/"/g' \
| sed \
	-e '1s/^/\{"special":\{/g' \
	-e '1,$s/"color0":/},"colors":{"color0":/g;' \
	-e '$s/,$/}}/' \
| sed -e 'N;s/,\n\}/}/g' \
| sed -e 's/\(",\|},\)\(.\)/\1\n\2/g;' \
| sed -e 's/\(.\)}/\1\n}/g;s/{\([{"]\)/{\n\1/g'


