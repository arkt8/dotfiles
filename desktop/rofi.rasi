configuration {
	sidebar-mode: true;
	font: "Terminus(TTF) 12";
	hide-scrollbar: true;
	window-format: "{w:2} {c:10} {t}";
}

* {
	bg: #000000;
	fg: #ffdcb5;
	accent: #b4060a;
	urgent: #ff8800aa;
	alt:#df1902;
	selected: #3a7475;
	active: #b4060a;
	color0: #202020;
	color1: #df1902;
	color2: #3a7475;
	color3: #df6601;
	color4: #1c575b;
	color5: #b4060a;
	color6: #253749;
	color7: #cab399;
	color8: #4e4e4e;
	color9: #ff3902;
	color10: #40a1a3;
	color11: #ff8601;
	color12: #1d8188;
	color13: #e20106;
	color14: #2d4b5f;
	color15: #ffdcb5;
}

#window {
    background-color: transparent;
	border-radius:2ch;
}

#mainbox {
    border: 2ch;
	border-color: @color0;
    padding: 0;
	height: 10px;
	children: [ mode-switcher, content ];
	orientation:vertical;
	background-color: @bg;
}
content {
	children: [ listview, inputbar] ;
	children: [ message, inputbar, listview];
	padding:2ch;
	border-radius: 2ch 0 2ch 2ch;
	background-color: @bg;
}
mode-switcher {
    border: 0;
	padding: 0;
	spacing: 0;
	anchor: north;
	orientation: horizontal;
	background-color: @color0;
}

#button {
    text-color: @fg;
	background-color: @color0;
	expand: false;
	padding:10px;
	border-radius: 1ch 1ch 0 0;
}

#button.selected {
    /* background-color: @accent; */
	background-color:@bg;
    text-color: @fg;
}

#message {
    border: 2px 0px 0px;
    border-color: @alt;
    padding: 1px;
}

#textbox {
    text-color: @fg;
}


#textbox-prompt-colon {
    expand: false;
    str: ":";
    margin: 0px 0.3em 0em 0em;
    text-color: @fg;
}

#listview {
    fixed-height: 0;
    border: 0;
    border-color: @alt;
    spacing: 2px;
    scrollbar: false;
    padding: 1ch 0px 0px;
	background-color: transparent;
}

#element {
    border: 0;
    padding: 0.5ch;
	background-color:transparent;
	text-color: @fg;
	border-radius:1ch;
}

#element.urgent {
    background-color: transparent;
    text-color: @urgent;
}

#element.active {
    background-color: transparent;
    text-color: @active;
}

#element.selected {
    background-color: @selected;
    text-color: @bg;
	text-style: bold;
}

#element.selected.urgent {
    background-color: @selected;
    text-color: @urgent;
	text-style: italic;
}

#element.selected.active {
    background-color: @selected;
    text-color: @active;
}

