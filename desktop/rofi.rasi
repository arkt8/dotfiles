#scrollbar {
    width: 2px;
    border: 0;
    handle-width: 8px;
    padding: 0;
	border-radius:2px;
	background-color:transparent;
}


#inputbar {
    spacing: 0;
    text-color: @bg;
    padding: 1px;
	background-color:transparent;
	border: 0;
    children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
}
	message, textbox, textbox-prompt-colon, case-indicator, entry, prompt {
		background-color:transparent;
		border:0;
		text-color: @fg;
	}
	inputbar {
		padding: 1ch 0;
		border-color: @fg;
		border: 0 dash 0 dash 1px 0 dash;
	}
